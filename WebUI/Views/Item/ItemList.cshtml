@{
    Layout = "~/Views/Shared/_Blank.cshtml";
}

@section head
{
    <script src="@Url.Content("~/Content/Scripts/Item/ItemList.js")?v=@(new Random().Next())" type="text/javascript"></script>
}

<div id="infoMain" class="easyui-layout" data-options="fit:true" style="margin-top: 3px;">
    <div title="校区信息" data-options="region:'west',border:false,collapsible:true,split:true,disabled:true" style="width: 320px;">
        <table id="deptTree" data-options="fit:true,border:false"></table>
    </div>
    <div title="收费项目" data-options="region:'center',border:false">
        <table id="itemTree" data-options="fit:true,border:false"></table>
    </div>
    <div title="收费项目设置" data-options="region:'east',border:false,collapsible:false,split:true,disabled:true" style="width: 500px;" id="set" >
        <div class="easyui-tabs" id="mainTabs" data-options="fit:true,border:false">
            <div title="收费类别" id="tabFee">
                <table id="grid" data-options="fit:true,border:false"></table>
            </div>
            <div title="专业" id="tabProfession">
                <table id="gridProfession" data-options="fit:true,border:false"></table>
            </div>
            <div title="配品" id="tabGive">
                <table id="gridGive" data-options="fit:true,border:false"></table>
            </div>
            <div title="优惠方案" id="tabDiscount">
                <table id="gridDiscount" data-options="fit:true,border:false"></table>
            </div>
        </div>
    </div>
</div>

<div id="editItem"></div>
<div id="editItem-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" id="btnSave" iconcls="icon-ok">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="javascript: $('#editItem').dialog('close')" iconcls="icon-cancel">关闭</a>
</div>
