<div id="copyItem-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" id="btnCopyAndContinue" iconcls="icon-ok">复制并继续</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" id="btnCopy" iconcls="icon-ok">复制</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="javascript: $('#copyItem').dialog('close')" iconcls="icon-cancel">关闭</a>
</div>

