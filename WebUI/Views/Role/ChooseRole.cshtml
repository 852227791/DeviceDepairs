@{
    Layout = "~/Views/Shared/_Pop.cshtml";
}

<script src="@Url.Content("~/Content/Scripts/Role/ChooseRole.js")?v=@(new Random().Next())" type="text/javascript"></script>

<div id="infoMain-Choose" class="easyui-layout" data-options="fit:true">
    <div title="搜索" data-options="region:'north',border:false,collapsible:false,iconCls:'icon-search'" style="height: 57px;">
        <div id="searchBox-Choose" class="easyui-layout" data-options="fit:true">
            <form id="fSearch-Choose" class="easyui-form">
                <div data-options="region:'north',border:false">
                    <div class="t-div">
                        <div>角色名:</div>
                        <div>
                            <input id="txtName-Choose" name="txtName-Choose" type="text" class="easyui-textbox" style="width: 100px;" />
                        </div>
                        <div style="padding-top: 2px;">
                            <a href="javascript:void(0)" id="btnSearch-Choose" class="easyui-linkbutton" iconcls="icon-search">查询</a>
                        </div>
                        <div style="padding-top: 2px;">
                            <a href="javascript:void(0)" id="btnReset-Choose" class="easyui-linkbutton" iconcls="icon-undo">重置</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="grid-Choose" data-options="fit:true,border:false"></table>
    </div>
</div>
