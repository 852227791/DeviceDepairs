@{
    Layout = "~/Views/Shared/_SelfHelp.cshtml";
}

@section head
{
    <style type="text/css">
        .form-signin {
            max-width: 400px;
            padding: 20px;
            margin: 0 auto;
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin .form-control {
                position: relative;
                height: auto;
                -webkit-box-sizing: border-box;
                -moz-box-sizing: border-box;
                box-sizing: border-box;
                padding: 10px;
                font-size: 40px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>
}


<div class="container">
    <div class="row" style="margin-top:260px">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <form class="form-signin" role="form" action="../SelfHelp/StudentLogin">
                <input type="hidden" value="@ViewBag.Type" name="Type" />
                <input type="text" class="form-control" placeholder="身份证号" name="IdCard" required autofocus style="width:100%;height:100%">
                <label style="color:#ff0000" id="errorMessage">@ViewBag.Error</label>
                <br />
            </form>
        </div>
        <div class="col-md-3">
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <p><a class="btn btn-lg btn-primary" href="../SelfHelp/SearchFee" role="button" style="width:100%;height:100%;text-align:center;vertical-align:middle;font-size:50px">信息查询 </a></p>
        </div>
        <div class="col-md-3">
            <p><a class="btn btn-lg btn-primary" href="../SelfHelp/OnlineFee" role="button" style="width:100%;height:100%;text-align:center;vertical-align:middle;font-size:50px">在线缴费 </a></p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
