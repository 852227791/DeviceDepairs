    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta content="IE=Edge;chrome=1" http-equiv="X-UA-Compatible" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Bootstrap/dist/js/jquery.min.js"></script>
    <script src="~/Content/Bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/Content/Bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />


    <style type="text/css">
        .topbar {
            background-color: #0071c5;
            height: 52px;
            display: table-row;
            width: 100%;
        }

        .topcenter {
            margin: 0 auto;
            width: 800px;
            display: block;
        }

        .logo {
            background: url(../Content/Images/logo.png) no-repeat;
            height: 52px;
            width: 218px;
            float: left;
        }

        .toptext {
            float: right;
            color: #fff;
            height: 52px;
            line-height: 52px;
        }



        .copyright {
            margin: 0 auto;
            width: 800px;
            display: block;
            border-top: 1px solid #cbcbcb;
            color: #7f7f7f;
            text-align: center;
            padding: 10px;
        }

        .main {
            display: table;
            width: 100%;
            height: 100%;
        }

    </style>
    @RenderSection("head", required: false)
    <style type="text/css">
        html, body {
            height: 100%;
            width: 100%;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="topbar">
            <div class="topcenter">
                <div class="logo"></div>
                <div class="toptext">
                    <span>感恩 阳光 严谨 责任</span>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
        <div style="display: table-row; height: 55px">
            <div class="copyright">
                四川希望教育产业集团有限公司 信息部
            </div>
        </div>
    </div>

</body>
</html>





