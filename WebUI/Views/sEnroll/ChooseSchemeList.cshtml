@{
    Layout = "~/Views/Shared/_Pop.cshtml";
}
<script src="@Url.Content("~/Content/Scripts/sEnroll/ChooseSchemeList.js")?v=@(new Random().Next())" type="text/javascript"></script>

<div id="infoMainChooseScheme" class="easyui-layout" data-options="fit:true">
    <div title="搜索" data-options="region:'north',border:false,collapsible:false,iconCls:'icon-search'" style="height: 57px;">
        <div id="searchBoxChooseScheme" class="easyui-layout" data-options="fit:true">
            <form id="fSearchChooseScheme" class="easyui-form">
                <div data-options="region:'north',border:false">
                    <div class="t-div">
                        <div>方案名称:</div>
                        <div>
                            <input id="txtSchemeName" name="txtSchemeName" type="text" class="easyui-textbox" style="width: 100px;" />
                        </div>
                        <div style="padding-top: 2px;">
                            <a href="javascript:void(0)" id="btnSearchChooseScheme" class="easyui-linkbutton" iconcls="icon-search">查询</a>
                        </div>
                        <div style="padding-top: 2px;">
                            <a href="javascript:void(0)" id="btnResetChooseScheme" class="easyui-linkbutton" iconcls="icon-undo">重置</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="chooseschemegrid1" data-options="fit:true,border:true"></table>
    </div>
    <div data-options="region:'south',border:false" style="height:250px;">
        <div id="btn" class="easyui-layout" data-options="fit:true">
            <div data-options="region:'north',border:false" style="height: 36px;">
                <div style="text-align: center; margin: 5px 0;">
                    <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton">添&nbsp;&nbsp;加</a> &nbsp;&nbsp;
                    <a id="btnRemove" href="javascript:void(0)" class="easyui-linkbutton">移&nbsp;&nbsp;除</a>
                </div>
            </div>
            <div data-options="region:'center',border:false">
                <table id="chooseschemegrid2" data-options="fit:true,border:true"></table>
            </div>
        </div>
    </div>
</div>

