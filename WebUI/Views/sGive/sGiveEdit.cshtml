@{
    Layout = "~/Views/Shared/_Pop.cshtml";
}

<script src="@Url.Content("~/Content/Scripts/sGive/sGiveEdit.js")?v=@(new Random().Next())" type="text/javascript"></script>

<form id="fSave" class="easyui-form" method="post">
    <table class="t-form">
        <tr style="display: none;">
            <td>sGiveID：</td>
            <td>
                <input class="easyui-textbox" type="text" id="editsGiveID" name="sGiveID" />
                <input class="easyui-textbox" type="text" id="editsDeptID" name="DeptID" />
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>配品名称：</td>
            <td>
                <input class="easyui-textbox" type="text" id="editName" name="Name" data-options="required:true,validType:['length[1,32]','isRight[0,\'配品名称不能重复\']']" />
            </td>
            <td>配品金额：</td>
            <td>
                <input class="easyui-numberspinner" type="text" id="editMoney" name="Money" data-options="required:true,min:0,precision:2" />
            </td>
        </tr>
        <tr>
            <td>备注：</td>
            <td colspan="3">
                <input class="easyui-textbox" type="text" id="editRemark" name="Remark" data-options="multiline:true" style="height: 80px; width: 490px;" />
            </td>
        </tr>
    </table>
</form>
