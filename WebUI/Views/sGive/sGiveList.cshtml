@{
    Layout = "~/Views/Shared/_Blank.cshtml";
}

@section head
{
    <script src="@Url.Content("~/Content/Scripts/sGive/sGiveList.js")?v=@(new Random().Next())" type="text/javascript"></script>
}

<div id="infoMain" class="easyui-layout" data-options="fit:true">
    <div title="校区信息" data-options="region:'west',border:false,collapsible:false,split:true,disabled:true" style="width: 320px;">
        <table id="deptTree" data-options="fit:true,border:false"></table>
    </div>
    <div title="配品列表" data-options="region:'center',border:false">
        <table id="grid" data-options="fit:true,border:false"></table>
    </div>
</div>

<div id="editsGive"></div>
<div id="editsGive-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" id="btnSave" iconcls="icon-ok">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="javascript:$('#editsGive').dialog('close')" iconcls="icon-cancel">关闭</a>
</div>